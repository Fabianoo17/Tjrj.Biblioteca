@model List<Tjrj.Biblioteca.Application.Dtos.Livros.LivroListItemDto>

@{
    ViewData["Title"] = "Livros";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Livros</h2>
    <a class="btn btn-primary" asp-action="Create">Novo Livro</a>
</div>

@if (TempData["Error"] is not null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Código</th>
            <th>Título</th>
            <th>Editora</th>
            <th>Edição</th>
            <th>Ano</th>
            <th class="text-end">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var l in Model)
        {
            <tr>
                <td>@l.Codl</td>
                <td>@l.Titulo</td>
                <td>@l.Editora</td>
                <td>@l.Edicao</td>
                <td>@l.AnoPublicacao</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@l.Codl">Editar</a>
                    <form asp-action="Delete" asp-route-id="@l.Codl" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Tem certeza que deseja remover?');">
                            Remover
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
